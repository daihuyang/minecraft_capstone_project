{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron Main",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "args": [
                "--devtools"
            ],
            "program": "${workspaceRoot}/src/main.js",
            "protocol": "inspector",
            "stopOnEntry": false,
            "console": "integratedTerminal"
        }
    ]
}